{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "title": "Median Vs Average Income per person by Victorian Local Government Areas",
  "data": {
    "url": "https://raw.githubusercontent.com/Jsee1/jsee1-vega/main/data/MedianMeanLGA.csv"
  },
  "params": [
    {
      "name": "EarnersThreshold",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 150000,
        "step": 5000,
        "name": "Minimum Population: "
      }
    },
    {}
  ],  
  "encoding": {
    "x": {
      "field": "Median",
      "type": "quantitative",
      "title": "Median Income per person",
      "scale": {"domain": [0, 110000]}
    },
    "y": {
      "title": "Average Income per person",
      "field": "Mean",
      "type": "quantitative",
      "scale": {"domain": [0, 110000]}
    }
  },
  "layer": [
    {
      "transform": [
        {"filter": "datum.Earners > EarnersThreshold"},
        {"filter": "datum.Earners < 1000000"}
      ],
        "selection": {
    "grid": {
      "type": "interval", "bind": "scales"
    }
  },
      "mark": "circle",
      "encoding": {
        "color": {"title": "Region", 
        "field": "Area", 
        "type": "nominal",
        "scale": {
        "domain": [
          "Greater Melbourne",
          "Mallee",
          "Hume",
          "Grampians",
          "South West Victoria",
          "Gippsland"
        ],
        "range": [
          "#e41a1c",
          "#984ea3",
          "#ff7f00",
          "#a6cee3",
          "#377eb8",
          "#a65628"
        ]
          },
          "opacity": {
          "value": 0.6
          }
        },
        "size": {"field": "Earners", 
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [10000, 40000, 70000, 110000, 150000],
            "range" : [50, 100, 150, 200, 250]
          }
        },
        "tooltip": [
          {
            "field": "LGA NAME",
            "type": "nominal",
            "title": "Local Government Area"
          },
          {
            "field": "Median",
            "type": "quantitative",
            "title": "Median Income $"
          },
          {"field": "Mean", 
            "type": "quantitative", 
            "title": "Average Income $"},
          {"field": "Earners", 
            "type": "quantitative", 
            "title": "Number of Earners $"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "LGA NAME", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['LGA NAME'] == 'Monash' || datum['LGA NAME'] == 'Melbourne' || datum['LGA NAME'] == 'Stonnington' || datum['LGA NAME'] == 'Gannawarra'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "LGA NAME",
            "type": "nominal",
            "title": "Local Government Area"
          },
          {
            "field": "Median",
            "type": "quantitative",
            "title": "Median Income $"
          },
          {"field": "Mean", 
            "type": "quantitative", 
            "title": "Average Income $"},
          {"field": "Earners", 
            "type": "quantitative", 
            "title": "Number of Earners $"}
        ]
      }
    },
    {
      "mark": {"type": "rule", "tooltip": true},
      "encoding": {
        "y": {"datum": 0},
        "x": {"datum": 0},
        "y2": {"datum": 111000},
        "x2": {"datum": 111000},
        "color": {"value": "orange"},
        "size": {"value": 1}
      }
    }
  ]
}